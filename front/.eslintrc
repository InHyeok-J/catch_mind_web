{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["prettier"],
    "extends": ["plugin:prettier/recommended"],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "prettier/prettier": "off"
    },
    "ignorePatterns": ["node_modules/"]
}