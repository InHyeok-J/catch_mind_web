{
    "name": "boilerplate_nodejs",
    "version": "1.0.0",
    "description": "nodejs + javascript + express boilerplate",
    "main": "/src/index.js",
    "scripts": {
        "dev": "nodemon --exec ts-node src/app.ts",
        "start": "tsc &&  node dist/app.js",
        "typeorm": "ts-node ./node_modules/.bin/typeorm -f ./src/database/ormconfig.ts",
        "migration:generate": "yarn run typeorm migration:generate -n",
        "migration:blank": "yarn run typeorm migration:create -n"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.0.1",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "dotenv-cli": "^4.0.0",
        "express": "^4.17.1",
        "express-session": "^1.17.2",
        "morgan": "^1.10.0",
        "mysql2": "^2.3.3-rc.0",
        "passport": "^0.5.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.39"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/express-session": "^1.17.4",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.11.6",
        "@types/passport": "^1.0.7",
        "@types/passport-local": "^1.0.34",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "eslint": "^7.31.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "nodemon": "^2.0.12",
        "prettier": "^2.3.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    }
}
